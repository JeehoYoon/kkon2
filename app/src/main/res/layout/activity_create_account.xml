<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateAccountActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email"
            android:hint="이메일"
            android:layout_marginTop="88dp" android:layout_marginBottom="133dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/spinner"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password"
            android:hint="비밀번호"
            app:layout_constraintTop_toBottomOf="@+id/et_email" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="@+id/et_email"/>

    <Button
            android:text="가입하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_CreateAccount"
            android:layout_marginTop="168dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_cancel" android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"/>
    <Button
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_cancel"
            android:layout_marginTop="168dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintStart_toEndOf="@+id/bt_CreateAccount" android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:layout_width="341dp"
            android:layout_height="85dp"
            android:id="@+id/spinner"
            android:entries="@array/spin_arr"
            android:prompt="@string/spin_prompt"
            android:spinnerMode="dialog"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/et_email" android:layout_marginBottom="391dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="38dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="38dp" android:layout_marginEnd="38dp" android:layout_marginRight="38dp"
    />


</android.support.constraint.ConstraintLayout>